@model List<JiraConfluenceApi.Models.BlogsViewModel>
@{
    <title>Api with Jira Confluence</title>
}

@*CreatedBy // TareqAwwad*@

@foreach (var item in Model)
{
    var ImagePath = "https://confluenceapitest.atlassian.net" + item.CreatedByAvatar;
    <div class="row justify-content-center mt-4 mb-4">
        <div class="col-10 ContainerCard">
            <div class="CustomCard" onclick="ClickCard(this)">
                <div class="row">
                    <div class="col-1">
                        <img src="@ImagePath" class="CardImg" />
                    </div>
                    <div class="col-6">
                        <label class="CardLabel">@item.Title</label>
                        <span class="CardSpan">Publish Date : @item.Date</span>
                        <span class="CardSpan">Created By : @item.CreatedBy</span>
                    </div>
                </div>
            </div>

            <div class="DetailsCard d-none">
                @Html.Raw(item.Description)
            </div>
        </div>
    </div>
}

@*CreatedBy // TareqAwwad*@
